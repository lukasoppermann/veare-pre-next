{{> layouts/base title="| Portfolio – Copra" }}
{{#*inline "body"}}
  <style media="screen">
    @media (max-width: 1020px){
      page-section{
        padding: 0 var(--size-m);
      }
    }
    .c-section-portfolio-top-image{
      position: relative;
      overflow: visible;
      display: flex;
      margin-bottom: -300px;
      padding: 0;
    }
    .o-stage{
      margin-top: 25px;
      margin-bottom: 25px;
      margin-left: 50%;
      transform: translateX(-50%);
      width: 90%;
      height: auto;
    }
    .o-stage svg{
      width: 100%;
      height: auto;
    }
    .c-headline--copra{
      z-index: 100;
      padding: 50px 35px 45px;
      width: 50%;
      color: white;
      position: absolute;
      right: 0;
      top: 380px;
      background-color: #E1464B;
      box-shadow: 0 5px 30px 0 rgba(0,0,0,0.15);
    }
    .c-section-portfolio-top-image:before{
      content: "";
      display: block;
      position: absolute;
      height: 400px;
      width: 50%;
      top: 170px;
      background-color: #E1464B;
      z-index: 0;
    }
    .c-typo-description{
      width: calc(100%);
      max-width: 600px;
      position: relative;
      float: right;
      transform: translateY(80px);
    }
    .c-project-section-typography{
      padding-top: var(--size-l);
      margin-bottom: var(--size-xxg);
      background-color: var(--white-grey);
      padding-left: 0;
      padding-right: 0;
    }
    .c-project-section-typography:before,
    .c-project-section-typography:after{
      content: "";
      width: calc(100% + 40px);
      height: 80px;
      position: absolute;
      left: -20px;
      top: -40px;
      transform: rotate(3deg);
      background-color: var(--white-grey);
    }
    .c-project-section-typography:after{
      top: auto;
      bottom: -40px;
    }
    .c-project-section-typography-content{
      position: relative;
      z-index: 10;
      width: 100%;
      max-width: calc(1000px + 2 * var(--size-m));
      padding: 0 var(--size-m);
    }
    .c-diagonal-bg{
      width: 100%;
      height: 100%;
      fill: var(--light-grey);
      position: absolute;
      top: -100px;
      left: 0;
    }
    @media (max-width: 1100px){
      .c-section-portfolio-top-image:before{
        height: 300px;
      }
      .c-headline--copra{
        top: 280px;
      }
      .c-section-portfolio-top-image{
        margin-bottom: -250px;
      }
    }
    @media (max-width: 960px){
      .c-headline--copra{
        top: 240px;
        padding: 30px 25px 25px;
      }
    }
    @media (max-width: 880px){
      .o-stage{
        width: 96%;
      }
      .c-section-portfolio-top-image:before{
        height: 200px;
        top: 100px;
      }
      .c-headline--copra{
        top: 250px;
        padding: 30px 25px 25px;
        width: 450px;
      }
      .c-section-portfolio-top-image{
        margin-bottom: -150px;
      }
    }
    @media (max-width: 600px){
      .c-section-portfolio-top-image{
        margin-bottom: -50px;
      }
      .c-headline--copra svg{
        width: 100%;
      }
    }
    @media (max-width: 500px){
      .c-section-portfolio-top-image{
        margin-bottom: 50px;
      }
      .c-headline--copra{
        padding: 20px 25px 15px;
        width: 100%;
      }
    }
    .o-project-section{
      min-height: auto;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      --page-section-width: 100%;
    }
    .o-project-section__headline{
      font-family: var(--serif);
      font-style: italic;
      width: 100%;
      max-width: 1000px;
      text-align: center;
      position: relative;
      z-index: 100;
      display: inline-block;
      height: auto;
      padding-bottom: var(--size-xl);
      margin-bottom: var(--size-g)
    }
    .o-project-section__headline:before{
      content: "";
      position: absolute;
      bottom: 10px;
      left: 50%;
      transform: translateX(-50%);
      display: block;
      width: 140px;
      height: 7px;
      height: 1px;
      background: #E1464B;
    }
    .o-corporate-colors{
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: var(--size-g);
    }
    .o-corporate-colors__color{
      height: 240px;
      flex: 0 0 23%;
      box-shadow: 0 1px 2px 0 rgba(0,0,0,0.1), 5px 0 20px 0 rgba(0,0,0,0.15);
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      border-radius: 3px;
      overflow: hidden;
    }
    .o-corporate-colors__color_info{
      background: var(--white);
      padding: var(--size-s) var(--size-s) var(--size-h) var(--size-s);
      display: flex;
      flex-direction: column;
    }
    .o-corporate-colors__name{
      font-family: var(--sans-serif);
      font-size: var(--size-m);
      font-family: var(--font-montserrat);
      font-weight: var(--font-montserrat-bold);
      color: var(--black);
    }
    .o-corporate-colors__hex{
      font-size: var(--size-m);
      color: var(--black-50);
      text-transform: uppercase;
    }
    .o-corporate-colors__color_field{
      height: 100%;
    }
    .o-corporate-colors__color--primary .o-corporate-colors__color_field{
      background-color: #E1464B;
      background-image: linear-gradient(-180deg, rgb(232, 84, 89) 0%, rgb(218, 78, 83) 48%, rgb(217, 67, 72) 100%);
    }
    .o-corporate-colors__color--primary{
      box-shadow: 0 1px 4px 0 rgba(0,0,0,0.15), 10px 0 30px 0 rgba(0,0,0,0.20);
    }
    @media (min-width: 900px){
      .o-corporate-colors__color{
        flex-basis: 21%;
      }
      .o-corporate-colors__color--primary{
        height: 283px;
        flex-basis: 33%;
      }
      .o-corporate-colors__color--primary .o-corporate-colors__color_info{
          padding-bottom: var(--size-xxh);
      }
    }
    @media (max-width: 700px){
      .o-corporate-colors{
        flex-wrap: wrap;
        margin-bottom: var(--size-xl);
      }
      .o-corporate-colors__color{
        height: 240px;
        flex-basis: 48%;
        margin-bottom: 4%;
      }
    }
    @media (max-width: 600px){
      .o-corporate-colors{
        flex-direction: column;
      }
      .o-corporate-colors__color{
        width: 100%;
        max-width: 280px;
        margin-bottom: var(--size-s);
      }
    }
    .o-corporate-colors__color--secondary .o-corporate-colors__color_field{
      background-color: #B9323C;
    }
    .o-corporate-colors__color--tertiary .o-corporate-colors__color_field{
      background-color: #CDE1CD;
    }
    .o-corporate-colors__color--accent .o-corporate-colors__color_field{
      background-color: #5AAA96;
    }
    .copra-card-bottom-line{
      position: absolute;
      bottom: 0;
      left: 0;
      background: #E1464B;
      height: var(--size-xs);
      width: 100%;
    }
    .copra-card-bottom-line:before, .copra-card-bottom-line:after{
      content: "";
      position: absolute;
      height: var(--size-xs);
    }
    .copra-card-bottom-line:before{
      width: 31%;
      left: 51%;
      background: #B9323C;
    }
    .copra-card-bottom-line:after{
      width: 18%;
      right: 0;
      background: #5AAA96;
    }
    .c-copra-photo-grid{
      grid-template-rows: repeat(10, var(--size-xh));
      width: 100%;
    }
    .c-copra-logo-presenter-grid{
      height: 800px;
    }
    .c-copra-logo-presenter{
      background: #EDE9E7;
      width: 100%;
    }
    @media (min-width: 800px){
      .copra-logo-final{
        transform: translateY(-30%)
      }
      .c-copra-intro-card{
        margin-top: var(--size-xh);
      }
      grid-container{
        grid-gap: var(--size-xl);
      }
    }
    .c-copra-audience-svg{
      width: 100px;
      height: 100px;
      padding: var(--size-xs);
      box-sizing: border-box;
    }
    @media (max-width: 400px){
      .o-project-section{
        padding: 0 var(--size-s);
      }
    }
  </style>
